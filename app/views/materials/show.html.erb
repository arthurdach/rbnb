<div class="page-banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url(<%= image_path('banner.jpg') %>);">
  <h1><%= @material.name %></h1>
</div>



<div class="page-container">
  <div class="container">
    <h1> <%= @material.name %></h1>
    <p> <%= @material.category %></p>
    <p> <%= @material.description %></p>

        <% if policy(@material).edit? %>
          <%= link_to "Modifier", edit_material_path(@material), class: "btn btn-success" %>
        <% end %>
        <% if policy(@material).destroy? %>
          <%= link_to "Supprimer", material_path(@material),method: :delete, class: "btn btn-danger" %>
        <% end %>
        <% if policy(@material.locations.new).new? %>
          <%= link_to "book", new_material_location_path(@material) %>
        <% end %>
      </div>
    </div>
  </div>
</div>
