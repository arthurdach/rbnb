 <html>
  <head>
    <meta charset="utf-8">
    <title>Mon Matériel</title>
    <link href="https://fonts.googleapis.com/css?family=Varela+Round" rel="stylesheet">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.10/css/all.css">
    <link rel="stylesheet" href="css/style.css">
  </head>
  <body>

  <div class="small-banner" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(<%= cl_image_path('louer-matos_1.jpg') %>);">
    <h1> Mon matériel en location</h1>
  </div>

  <div class="container">
  <div class="cards">
      <% @materials.each do |material| %>
        <div class="card col-xs-3", style="background-image: url('<%= material.photo.present? ? cl_image_path(material.photo) : "" %>')">
          <div class="card-content">
            <h2><%= material.name %></h2>
            <p><%= material.description %></p>
            <p><%= material.price %> €</p>
            <p>
              <%= link_to "", material_path(material), class: "card-link" %>
            </p>
          </div>
        </div>
      <% end %>
  </div>
</div>


  </body>
</html>
