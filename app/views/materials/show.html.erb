<div class="card col-xs-3", style="background-image: url('<%= @material.photo.present? ? cl_image_path(@material.photo, height: 300, width: 400, crop: :fill) : "" %>')">
</div>

<div class="page-container">
  <div class="container">
    <h1> <%= @material.name %></h1>
    <p> <%= @material.category %></p>
    <p> <%= @material.description %></p>
    <p> <%= @material.price %> €</p>
    
      <% @reviews.each do |review|%>
      Note: <%= review.rating.times do %>
        <span class="fa fa-star checked"></span>
      <% end %>
          <br />
      Commentaire: <%= review.description %>
          <br />
          <br />
      <% end %>
    <br />
    
    <% if policy(@material).edit? %>
      <%= link_to "Modifier", edit_material_path(@material), class: "btn btn-success" %>
    <% end %>
    <% if policy(@material).destroy? %>
      <%= link_to "Supprimer", material_path(@material),method: :delete, class: "btn btn-danger" %>
    <% end %>
    <% if policy(@material.locations.new).new? %>
      <%= link_to "Réserver", new_material_location_path(@material), class: "btn btn-success"  %>
    <% end %>
    <% if policy(@material.locations.new).new? %>
      <%= link_to "Noter ce matériel", new_material_material_review_path(@material), class: "btn btn-primary"  %>
    <% end %>
  </div>

  <div id="map" data-markers=<%= @markers.to_json %> data-mapbox-api-key=<%= ENV["MAPBOX_API_KEY"] %> style="width: 50%; height: 400px">
  </div>
</div>



